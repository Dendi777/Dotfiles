set $mod Mod4

# Обои
output * bg /home/river/.config/qtile/wallpapers/wallpaper1.png fill

# Настройка рамки вокруг окна
default_border none 

# отступы от окон
gaps inner 10

# Blur окон [SwayFX]
blur enable

# закругление окон [SwayFX]
corner_radius 10

# настройка клавиатуры
input "type:keyboard" {
  xkb_layout us,ru
  xkb_options grp:alt_shift_toggle
}

# Настройка тачпада
input type:touchpad {
  tap enabled
  natural_scroll enabled
}

# Аудио
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% 
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%

# Микрофон Mute/Unmute на случай если заведу кнопку
bindsym XF86AudioMicMute exec amixer set Capture toggle
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Яркость экрана
bindsym XF86MonBrightnessDown exec /home/river/.config/sway/scripts/brightness down 
bindsym XF86MonBrightnessUp exec /home/river/.config/sway/scripts/brightness up

# скриншот в буфер Wayland
bindsym Print exec grim -g "$(slurp)" - | wl-copy

##################### KEY BINDING спец клавиши ################################
# Запуск приложений
bindsym $mod+Return exec xfce4-terminal
bindsym $mod+shift+b exec chromium --ozone-platform=wayland
bindsym $mod+shift+t exec telegram-desktop
bindsym $mod+shift+l exec libreoffice

# Закрыть текущее окно
bindsym $mod+q kill

# Для старта выбора приложений launcher кароче
bindsym $mod+d exec $menu

# без понятия
floating_modifier $mod normal

# Перезагрузка конфигурации
bindsym $mod+control+r reload

# Выход из оконника
bindsym $mod+control+q exec swaymsg "exit"

###### Смена фокуса окна
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Перемещение окон
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Resize окна[окон]
bindsym $mod+control+Right resize shrink width 10px
bindsym $mod+control+Left resize grow width 10px
bindsym $mod+control+Up resize grow height 10px
bindsym $mod+control+Down resize shrink height 10px


################ Рабочие Пространства ###################
# перемещение по Пространствам
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Перенос окна в фокусе в другое рабочее пространство
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10                       
##########################################################

bindsym $mod+b splith
bindsym $mod+v splitv

    # Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
bindsym $mod+control+f fullscreen

    # Toggle the current focus between tiling and floating mode
bindsym $mod+f floating toggle

    # Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

    # Move rocus to the parent container
bindsym $mod+a focus parent

bindsym $mod+Shift+minus move scratchpad


bindsym $mod+minus scratchpad show

bar {
    position top
    swaybar_command waybar

}

include /etc/sway/config.d/*
