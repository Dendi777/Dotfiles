# wallpapers
output eDP-1 {
  bg $HOME/.config/sway/wallpapers/wallpaper2.jpg fill
}

# none border [pixel, normal]
default_border none 

# gapps windows
gaps inner 10

# Blur windows [SwayFX]
blur enable

# round windows [SwayFX]
corner_radius 10

# dim windows  [SwayFX]
default_dim_inactive 0.2

# Rule window start telegram to workspace 5 from floating mode
for_window [app_id="org.telegram.desktop"] move container to workspace 5

# Config waybar
bar { 
    swaybar_command waybar-custom
}
